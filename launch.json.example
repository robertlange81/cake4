    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "webroot"  // Hier wird das webroot-Verzeichnis als Root-Verzeichnis festgelegt
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },        
        {

            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "externalConsole": false,
            "env": {
                "XDEBUG_SESSION": "1"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003, // Stellen Sie sicher, dass dieser Port mit dem in Ihrem Dockerfile/Xdebug konfigurierten Port Ã¼bereinstimmt
/*             "pathMappings": {
                "/var/www/html": "${workspaceFolder}" // Pfad im Container zu lokalem Verzeichnis
            }, */
            "log": true,
            "externalConsole": false,
            "env": {
                "XDEBUG_SESSION": "yes"
            },
            "xdebugSettings": {
                "max_children": 256,
                "max_data": 1024,
                "max_depth": 5
            }
        }
    ]
}